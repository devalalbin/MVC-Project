@model IEnumerable<CityDb>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <h1>Cities</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Country Code</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CountryId</td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-area="" asp-controller="city" asp-action="CreateCity">Create a City</a>
    <a class="btn btn-primary" asp-area="" asp-controller="City" asp-action="EditCity">Edit a city</a>
    <form asp-controller="City" asp-action="DeleteCity" method="post" role="form">
        <br />
        <label for="ssn">Enter cityId for deletion:</label>
        <input type="text" name="id" />
        <input type="submit" class="btn btn-primary" name="btnFilter" value="delete" />
    </form>
</div>