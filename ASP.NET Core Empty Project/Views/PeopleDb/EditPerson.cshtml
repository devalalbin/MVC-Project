@model EditPersonVM
@{
    ViewData["Title"] = "EditPerson";
}

<h2>Edit Person</h2>


<div class="container">

    <hr /><form asp-controller="PeopleDb" asp-action="EditPerson" method="post" class="form p-5 border border-secondary">
    <h4 class="form-text">Edit Person</h4>
    <div class="form-group">
        <label asp-for="SSN" class="control-label"></label>
        <input asp-for="SSN" class="form-control" />
        <span asp-validation-for="SSN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="alert-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span class="alert-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="CityId"></label>
        <input class="form-control" asp-for="CityId" />
        <span class="alert-danger" asp-validation-for="CityId"></span>
    </div>
    <button class="form-control btn btn-primary" type="submit"> Update Person </button>
</form>


    <div>
        <a asp-action="Index">Back person List</a>
    </div>


</div>