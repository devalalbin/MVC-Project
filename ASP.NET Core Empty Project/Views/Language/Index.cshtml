@model IEnumerable<LanguageDb>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Languages</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
    </table>

        <a class="btn btn-primary" asp-area="" asp-controller="Language" asp-action="CreateLanguage">Create a language</a>
    <form asp-controller="Language" asp-action="DeleteLanguage" method="post" role="form">
        <br />
        <label for="ssn">Enter language Id for deletion:</label>
        <input type="text" name="id" />
        <input type="submit" class="btn btn-primary" name="btnFilter" value="delete" />
    </form>
</div>
