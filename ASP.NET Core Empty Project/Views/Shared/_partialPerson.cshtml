@model List<Person>

    @*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
    *@
    <div class="container">
        <h2>People</h2>


        <div class="row">
            <div class="col-md-2">
                <h3>ID</h3>
            </div>
            <div class="col-md-2">
                <h3>Name</h3>
            </div>
            <div class="col-md-2">
                <h3>Number</h3>
            </div>
            <div class="col-md-2">
                <h3>City</h3>
            </div>
            <div class="col-md-2">
                <h3>Action</h3>
            </div>
        </div>


        @foreach (var person in Model)
        {
        <div class="row">
            <div class="col-md-2">
                <p>@person.Id</p>
            </div>
            <div class="col-md-2">
                <p>@person.Name</p>
            </div>
            <div class="col-md-2">
                <p> @person.PhoneNr</p>
            </div>
            <div class="col-md-2">
                <p>@person.City</p>
            </div>
            <div class="col-md-2">
                <a href="#" onclick="location.href ='@Url.Action("DeletePerson","People",person.Id)'">Delete</a>
            </div>
            <br>
        </div>
        }
    </div>



